<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:id="@+id/fromTo" android:layout_weight="1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/from"
            android:gravity="start">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/from"
                android:id="@+id/textViewFromLabel" android:layout_weight="2"
                android:paddingStart="10dp"
                android:textAlignment="gravity"
                android:gravity="start"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:id="@+id/textViewFrom" android:layout_weight="1"
                android:textAlignment="gravity"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:id="@+id/to"
                      android:gravity="start">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/to"
                      android:id="@+id/textViewToLabel" android:layout_weight="2"
                      android:paddingStart="10dp"
                      android:gravity="start"
                      android:textAlignment="gravity"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="..."
                      android:id="@+id/textViewTo" android:layout_weight="1"
                      android:textAlignment="gravity"
                      android:gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dates"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/StartsFromLayout"
                android:gravity="start">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/starts"
                    android:id="@+id/startsFromLabel"
                    android:layout_weight="2"
                    android:paddingStart="10dp"
                    android:textAlignment="gravity"
                    android:gravity="start"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:id="@+id/startsFromText"
                    android:layout_weight="1"
                    android:textAlignment="gravity"
                    android:gravity="start"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/EndsOnLayout"
                android:gravity="start">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/ends"
                    android:id="@+id/endsOnLabel"
                    android:layout_weight="2"
                    android:paddingStart="10dp"
                    android:textAlignment="gravity"
                    android:gravity="start"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="..."
                    android:id="@+id/endsOnText"
                    android:layout_weight="1"
                    android:textAlignment="gravity"
                    android:gravity="start"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/timeType" android:layout_weight="1">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="..."
                      android:id="@+id/textViewType" android:textStyle="bold"
                      android:textIsSelectable="false" android:textColor="#ff1f7872" android:gravity="center"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="..."
                      android:id="@+id/textViewTime" android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>