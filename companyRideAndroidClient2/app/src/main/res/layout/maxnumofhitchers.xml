<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
        <TextView android:id="@+id/textViewNumOfHitchers" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:text="@string/max_number_of_hitchers"
                  android:textAppearance="?android:attr/textAppearanceMedium"/>
        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerMaxNumOfHitchers"
                android:entries="@array/number_of_hitchers"/>
</LinearLayout>